{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
		"typeRoots": [
			"types",
			"./node_modules/@types"
		],
		"esModuleInterop": true,
		"resolveJsonModule": true
  },
	"include": [
		"src",
		"test"
	]
}
